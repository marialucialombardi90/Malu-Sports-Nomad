{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".mdx"]
      }
    }
  },
  "extends": ["react-app", "react-app/jest", "prettier", "plugin:react-hooks/recommended"],
  "plugins": ["prettier", "react", "react-hooks"],
  "rules": {
    // "comma-dangle": "off",
    // "no-console": "off",
    // "no-plusplus": "off",
    // "react/jsx-no-bind": "off",
    "no-nested-ternary": "off",
  }
}
